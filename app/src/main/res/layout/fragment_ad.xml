<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/colorAccent"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:background="@drawable/box_grey_outline"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.0"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton style="?android:borderlessButtonStyle"
            android:id="@+id/ad_call_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@mipmap/ic_phone"/>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray" />

        <ImageButton style="?android:borderlessButtonStyle"
            android:id="@+id/ad_email_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@mipmap/ic_email"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ad_description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_grey_outline"
        android:scrollbars="vertical"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:layout_gravity="start"
        android:textSize="@dimen/description_text_size"
        android:textColor="@color/black"
        tools:text="Filler for description"/>

</LinearLayout>